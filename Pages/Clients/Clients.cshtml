@page
@model GestionStock.Pages.Clients.ClientsModel
@{
    ViewData["Title"] = "Liste des Clients";
}

<div class="container mt-4">
    <h2>👥 Liste des Clients</h2>
    <hr />

    <a class="btn btn-success btn-sm mb-3" href="/Clients/Create">
        <i class="bi bi-plus-circle"></i> ➕ Nouveau Client
    </a>

    @if (Model.listClients != null && Model.listClients.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Email</th>
                    <th>Téléphone</th>
                    <th>Adresse</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.listClients)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.nom</td>
                        <td>@item.prenom</td>
                        <td>@item.email</td>
                        <td>@item.telephone</td>
                        <td>@item.adresse</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Clients/Edit?id=@item.id">
                                <i class="bi bi-pencil"></i> Éditer
                            </a>
                            <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@item.id">
                                <i class="bi bi-trash"></i> Supprimer
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            ℹ️ Aucun client trouvé. <a href="/Clients/Create">Ajouter le premier client</a>
        </div>
    }
</div>